@page
@model AggiungiProdottoModel
<form method="post">
    <label for="Nome">Nome Prodotto:</label>
    <input type="text" asp-for="NuovoProdotto.Nome" required />

    <label for="Prezzo">Prezzo:</label>
    <input type="number" step="0.01" asp-for="NuovoProdotto.Prezzo" required />

    <button type="submit">Aggiungi Prodotto</button>
</form>